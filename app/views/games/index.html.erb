<div id="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/free-vector/circuit-lines-technology-diagram-background-red-shade_1017-26284.jpg?w=2000);">
  <h1>My Game-Time app</h1>
  <p>This is just a test playground app</p>
</div>

<div class="container">
  <div class="row">
    <div class="d-flex justify-content-between">
      <div class="col col-6">
        <h1>Games</h1>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @games.each do |game| %>
              <tr>
                <td><%= game.name %></td>
                <td><%= game.description %></td>
                <td><%= link_to 'Play', game %></td>
                <%# <td><%= link_to 'Edit', edit_game_path(game) </td> %>
                <%# <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } </td> %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
      </div>
    </div>
  </div>
</div>
