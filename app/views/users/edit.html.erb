<div class="container form py-5" style="color: white">
  <h1>Edit Profile</h1>
  <%= simple_form_for(@user, :url => user_path, :method => :patch) do |f| %>
    <%= f.input :full_name %>
    <%= f.input :email %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Edit Profile", class: "btn btn-warning confirm-btn" %>
  <% end %>
  <br>
</div>
